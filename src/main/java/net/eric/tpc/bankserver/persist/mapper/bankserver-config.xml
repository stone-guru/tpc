<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <typeAliases>
    <typeAlias alias="Pair" type="net.eric.tpc.common.Pair"/>  
    <typeAlias alias="Account" type="net.eric.tpc.bankserver.entity.Account"/>
    <typeAlias alias="DepositMessage" type="net.eric.tpc.biz.DepositMessage"/>
  </typeAliases>
  
  <typeHandlers>
    <typeHandler handler="net.eric.tpc.bankserver.persist.MessageTypeHandler" 
                javaType="net.eric.tpc.biz.MessageType"
                jdbcType="CHAR"/>
  </typeHandlers>
  
  <environments default="default">
    <environment id="default">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="org.h2.Driver"/>
        <property name="url" value="${url}"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
      </dataSource>
    </environment>
  </environments>

  <mappers>
    <mapper resource="net/eric/tpc/bankserver/persist/mapper/DatabaseInitMapper.xml"/>
    <mapper resource="net/eric/tpc/bankserver/persist/mapper/AccountMapper.xml"/>
    <mapper resource="net/eric/tpc/bankserver/persist/mapper/DepositMessageMapper.xml"/>
  </mappers>
</configuration>
